<UserControl x:Class="MetroDemo.ExampleViews.UpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:MetroDemo="clr-namespace:MetroDemo"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900"
             d:DataContext="{d:DesignInstance MetroDemo:MainWindowViewModel}" Loaded="UpdateView_OnLoaded" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro.Resources;component/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Thickness x:Key="ColumnMargin">10 5 10 5</Thickness>
            <Thickness x:Key="ControlMargin">0 5 0 0</Thickness>
        </ResourceDictionary>
    </UserControl.Resources>

    <AdornerDecorator>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
                <RowDefinition Height="300"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="1" Content="Configure Updates" HorizontalAlignment="Left" Style="{StaticResource MetroLabelTopHeader}" />

            <Grid Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="210"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0"
                    HorizontalAlignment="Left">
                    <StackPanel.Resources>
                        <BooleanToVisibilityConverter x:Key="btv" />
                    </StackPanel.Resources>

                    <Controls:ToggleSwitch x:Name="EnabledSwitch"
                                   IsChecked="false"
                                   OnLabel="Enabled"
                                   OffLabel="Disabled"
                                   Margin="{StaticResource ControlMargin}" IsCheckedChanged="EnabledSwitch_OnIsCheckedChanged"  />

                </StackPanel>

                <StackPanel Orientation="Vertical"  HorizontalAlignment="Left" Grid.Row="1">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="400" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Branch" Style="{StaticResource MetroLabelHeader}" Grid.Column="0" />
                        <Button Grid.Column="1" x:Name="BranchInfo" Width="30" Height="32" HorizontalAlignment="Left" Margin="0 0 0 0" 
                                                Focusable="False"  Style="{StaticResource MetroInfoButton}" Click="ProductInfo_OnClick" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="../images/info.png" Width="20" Height="20"/>
                            </StackPanel>
                        </Button>
                        <ComboBox x:Name="UpdateBranch"  Width="400" Height="35" Margin="0, 10, 0, 0" SelectedIndex="0" 
                                  FontSize="20" Grid.Column="2"  ItemsSource="{Binding Branches}" DisplayMemberPath="Name" SelectionChanged="UpdateBranch_OnSelectionChanged" >
                        </ComboBox>
                    </Grid>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="400" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="75" />
                            <ColumnDefinition Width="70" />
                        </Grid.ColumnDefinitions>
                        
                        <Label Content="Update Path" Style="{StaticResource MetroLabelHeader}" Grid.Column="0" />
                        <Button Grid.Column="1" x:Name="UpdatePathInfo" Width="30" Height="32" HorizontalAlignment="Left" Margin="0 0 0 0" 
                                                Focusable="False"  Style="{StaticResource MetroInfoButton}" Click="ProductInfo_OnClick" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="../images/info.png" Width="20" Height="20"/>
                            </StackPanel>
                        </Button>

                        <Controls:MetroProgressBar x:Name="DownloadProgressBar" Margin="{StaticResource ControlMargin}"  Grid.Column="2" Height="35" Background="White"  />
                        <TextBox x:Name="UpdateUpdatePath" Background="#00ffffff" Margin="{StaticResource ControlMargin}" FontSize="20" Grid.Column="2"
                         Controls:TextBoxHelper.Watermark="Network, local or HTTP Path"
                         Controls:TextBoxHelper.ClearTextButton="True" TextChanged="UpdateUpdatePath_OnTextChanged"
                         Text="" Height="35" >
                            
                        </TextBox>
                        
                        <Button Width="60" Margin="{StaticResource ControlMargin}" Height="40" Grid.Column="3"
                                            Content="Browse" x:Name="UpdatePath" Click="UpdatePath_OnClick" />

                        <Button Width="50" Height="40" Grid.Column="4" Margin="{StaticResource ControlMargin}"
                                            Content="Open" x:Name="OpenFolderButton" IsEnabled="False" Click="OpenFolderButton_OnClick"   />
                        <Button Width="70" Height="40" Grid.Column="5" Margin="{StaticResource ControlMargin}"
                                            Content="Download" x:Name="DownloadButton" Click="DownloadButton_OnClick" IsEnabled="False"   />
                        <Label x:Name="DownloadPercent" Content="" Style="{StaticResource MetroLabelHeader}" Margin="{StaticResource ControlMargin}" Grid.Column="6" />
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="400" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Target Version" Style="{StaticResource MetroLabelHeader}" Grid.Column="0" />
                        <Button Grid.Column="1" x:Name="TargetVersionInfo" Width="30" Height="32" HorizontalAlignment="Left" Margin="0 0 0 0" 
                                                Focusable="False"  Style="{StaticResource MetroInfoButton}" Click="ProductInfo_OnClick" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="../images/info.png" Width="20" Height="20"/>
                            </StackPanel>
                        </Button>
                        <ComboBox Width="400" x:Name="UpdateTargetVersion" Grid.Column="2" 
                                          Height="35" HorizontalAlignment="Left"
                                          Style="{DynamicResource VirtualisedMetroComboBox}"
                                          Controls:TextBoxHelper.Watermark="16.0.4949.1003"
                                          DisplayMemberPath="Version"
                                          IsEditable="True"
                                          ItemsSource="{Binding Builds}"
                                          MaxDropDownHeight="125"
                                          FontSize="20"
                                          Text="{Binding Path=Version}" />
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="400" />
                        </Grid.ColumnDefinitions>
                        <Label Content="Deadline" Style="{StaticResource MetroLabelHeader}" Grid.Column="0" />
                        <Button Grid.Column="1" x:Name="DeadlineInfo" Width="30" Height="32" HorizontalAlignment="Left" Margin="0 0 0 0" 
                                                Focusable="False"  Style="{StaticResource MetroInfoButton}" Click="ProductInfo_OnClick" >
                            <StackPanel Orientation="Horizontal">
                                <Image Source="../images/info.png" Width="20" Height="20"/>
                            </StackPanel>
                        </Button>
                        <DatePicker x:Name="UpdateDeadline" Height="35" Grid.Column="2" PreviewKeyUp="UpdateDeadline_OnPreviewKeyUp"
                            Width="300" SelectedDateChanged="UpdateDeadline_OnSelectedDateChanged"
                            HorizontalAlignment="Left" FontSize="20"
                            Controls:TextBoxHelper.Watermark="Select a date" />
                        
                        <TextBox x:Name="DeadlineTimeHour" FontSize="20" Grid.Column="2" PreviewKeyDown="DeadlineTimeHour_OnKeyDown"
                         Controls:TextBoxHelper.Watermark="00" TextChanged="DeadlineTimeHour_OnTextChanged"
                         Text="" Height="35" Width="38" Margin="260 0 0 0" > 
                        </TextBox>

                        <TextBox x:Name="DeadlineTimeMinute" FontSize="20" Grid.Column="2" PreviewKeyDown="DeadlineTimeMinute_OnPreviewKeyDown"
                         Controls:TextBoxHelper.Watermark="00" TextChanged="DeadlineTimeMinute_OnTextChanged"
                         Text="" Height="35" Width="38" Margin="360 0 0 0" >
                        </TextBox>
                    </Grid>

                </StackPanel>

            </Grid>

            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" >
                <Grid.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/FlatButton.xaml" />
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition  />
                    <ColumnDefinition Width="20"  />
                    <ColumnDefinition  />
                </Grid.ColumnDefinitions>
                <Button Width="100" 
                    Margin="{StaticResource ControlMargin}" Height="40" Grid.Column="0"
                    Content="Previous" x:Name="PreviousButton" Click="PreviousButton_OnClick"  />
                <Button Width="100"
                    Margin="{StaticResource ControlMargin}" Height="40" Grid.Column="2"
                    Content="Next" x:Name="NextButton" Click="NextButton_OnClick"  />
            </Grid>
        </Grid>
    </AdornerDecorator>

</UserControl>
